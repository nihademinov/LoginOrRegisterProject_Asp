@using LoginOrRegisterProject_Asp.Models.DBEntities
@model User

<!DOCTYPE html>
<html>
<head>
    <title>Login & Registration Form</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="style.css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:400,600,700,800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <div class="cont">
        <div class="form sign-in">
            <h2>Sign In</h2>
            <form method="post" asp-action="LoginUser" asp-controller="Login">
                <label>
                    <span>Email Address</span>
                    <input type="email" asp-for="Email">
                </label>
                <label>
                    <span>Password</span>
                    <input type="password" asp-for="Password">
                </label>
                <button class="submit" type="submit">Sign In</button>
            </form>

            <div class="social-media">
                <ul>
                    <li><img src="~/images/facebook.png"></li>
                    <li><img src="~/images/twitter.png"></li>
                    <li><img src="~/images/linkedin.png"></li>
                    <li><img src="~/images/instagram.png"></li>
                </ul>
            </div>
        </div>
        <div class="sub-cont">
            <div class="img">
                <div class="img-text m-up">
                    <h1>New here?</h1>
                    <p>sign up and discover</p>
                </div>
                <div class="img-text m-in">
                    <h1>One of us?</h1>
                    <p>just sign in</p>
                </div>
                <div class="img-btn">
                    <span class="m-up">Sign Up</span>
                    <span class="m-in">Sign In</span>
                </div>
            </div>
            <div class="form sign-up">
                <h2>Sign Up</h2>
                <form asp-controller="Register" asp-action="LoginUser" method="post">
                    <label>
                        <span>Name</span>
                        <input type="text" asp-for="Name">
                    </label>
                    <label>
                        <span>Email</span>
                        <input type="email" asp-for="Email">
                    </label>
                    <label>
                        <span>Password</span>
                        <input type="password" asp-for="Password">
                    </label>
                    <label>
                        <span>Confirm Password</span>
                        <input type="password" asp-for="ConfirmPassword">
                    </label>
                    <button type="submit" class="submit">Sign Up Now</button>
                </form>

            </div>
        </div>
    </div>
    <script src="~/js/index.js"></script>

</body>
</html>